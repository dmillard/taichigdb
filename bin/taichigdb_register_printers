#!/usr/bin/env python

import sys
import os
from datetime import datetime


def main():
    loader = 'python\n__import__(\'taichigdb\').register_taichi_printers(None)\nend'
    path = os.path.expanduser('~/.gdbinit')
    try:
      with open(path, 'r') as f:
          gdbinit = f.read()
    except:
      gdbinit = ''

    if gdbinit.find(loader) == -1:
        print('Adding printer registration to ' + path)
        with open(path, 'w+') as f:
            f.write('# Added by ' + sys.argv[0] + ' on ' +
                    datetime.now().isoformat() + '\n')
            f.write(loader)
            f.flush()
    else:
        print('Printer registration already in ' + path)

    print('Done')


if __name__ == "__main__":
    main()
